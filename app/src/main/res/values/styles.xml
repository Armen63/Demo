<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="HomeUserItemStyle">
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">86dp</item>
        <!--<item name="android:layout_toEndOf">@+id/text_distance</item>-->
        <!--<item name="android:layout_toRightOf">@+id/text_distance</item>>-->
    </style>


    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabLayout.TextAppearance</item>
    </style>

    <style name="TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
    </style>

</resources>
